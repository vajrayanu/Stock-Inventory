@model IEnumerable<ITST.Models.Machine>

@{
    ViewBag.Title = "Machine Sheet";
}

<h2>PM Sheet</h2>

<h4>Plant</h4>
<hr />

<table class="table table-bordered">
    <tr class="active">
        <th>
            @Html.DisplayName("Plant")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("MachineSheetByDepartment", "Machine", new { id = item.PlantID })">@Html.DisplayFor(modelItem => item.Plant.PlantName)</a>
            </td>
        </tr>
    }

</table>
